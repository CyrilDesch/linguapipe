<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender with simple format -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss} %highlight(%-5level) %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger level - controlled by application config -->
    <root level="${LOG_LEVEL:-INFO}">
        <appender-ref ref="CONSOLE" />
    </root>

    <!-- Specific logger levels -->
    <logger name="srag" level="${LOG_LEVEL:-INFO}" additivity="false">
        <appender-ref ref="CONSOLE" />
    </logger>
    <logger name="io.getquill" level="WARN" />
    <logger name="com.zaxxer.hikari" level="WARN" />
    <logger name="org.flywaydb" level="INFO" />
    <logger name="io.minio" level="WARN" />
</configuration>
